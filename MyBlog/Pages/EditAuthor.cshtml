@page
@model MyBlog.Pages.EditAuthorModel
@{
	ViewData["Title"] = "EditAuthor";
	Layout = "~/Pages/_Layout.cshtml";
}

<h2>EditAuthor</h2>

<form method="post">

	<input class="form-control" type="hidden" asp-for="Author.Id" />

	<label asp-for="Author.Name"></label>
	<input class="form-control" type="text" asp-for="Author.Name" />

	<label asp-for="Author.Email"></label>
	<input class="form-control" type="text" asp-for="Author.Email" />

	<label asp-for="Author.Mobile"></label>
	<input class="form-control" type="text" asp-for="Author.Mobile" />

	<button class="btn btn-success" type="submit">Save</button>
	<a class="btn btn-warning" asp-page="./Authers">Cancel</a>
</form>

